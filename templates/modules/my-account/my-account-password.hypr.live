<h3 class="mz-l-stack-sectiontitle">{{ labels.changePassword }}</h3>
<div class="mz-accountsettings-password">
  <div>
    <label for="account-oldpassword" class="mz-accountsettings-oldpasswordlabel">{{ labels.oldPassword }}</label>
    <input id="account-oldpassword" class="mz-accountsettings-password" type="password" data-mz-value="oldPassword" value="{{ model.oldPassword }}" maxlength="{{themeSettings.passwordMaxLength}}"/>
  </div>
  <div>
    <label for="account-password" class="mz-accountsettings-passwordlabel">{{ labels.newPassword }}</label>
    <input id="account-password" class="mz-accountsettings-password" type="password" data-mz-value="password" value="{{ model.password }}" maxlength="{{themeSettings.passwordMaxLength}}"/>
  </div>
  <div>
    <label for="account-confirmpassword" class="mz-accountsettings-confirmpasswordlabel">{{ labels.confirmPassword }}</label>
    <input id="account-confirmpassword" class="mz-accountsettings-confirmpassword" type="password" data-mz-value="confirmPassword" value="{{ model.confirmPassword }}" maxlength="{{themeSettings.passwordMaxLength}}"/>
  </div>
  <div class="mz-password-actions">
    <div class="mz-validationmessage" data-mz-validationmessage-for="oldPassword"></div>
    <div class="mz-validationmessage" data-mz-validationmessage-for="password"></div>
    <div class="mz-validationmessage" data-mz-validationmessage-for="confirmPassword"></div>
    <button class="mz-button primary-btn mz-accountsettings-passworddone pull-right" data-mz-action="finishEditPassword">{{ labels.save }}</button>
  </div>

</div>
